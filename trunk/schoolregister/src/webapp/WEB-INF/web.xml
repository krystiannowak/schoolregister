<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
      PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
      "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>schoolregister</display-name>
    
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:applicationContext-hibernate.xml            
            classpath:applicationContext.xml 
            classpath:applicationContext-acegi-authorization.xml
            classpath:applicationContext-plugins.xml
            classpath:**/plugins/*.xml           
		</param-value>
    </context-param>

    <servlet>
        <servlet-name>application</servlet-name>
        <servlet-class>org.register.web.ApplicationServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
	
	<servlet-mapping>
        <servlet-name>application</servlet-name>
        <url-pattern>/application</url-pattern>
    </servlet-mapping>

</web-app>