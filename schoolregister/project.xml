<project>
    <pomVersion>3</pomVersion>
    <artifactId>schoolregister</artifactId>
    <name>schoolregister</name>
    <groupId>schoolregister</groupId>
    <currentVersion>1.0</currentVersion>
    <organization>Krystian Nowak</organization>
    <inceptionYear>2007</inceptionYear>
    <dependencies>
        <dependency>
            <groupId>springframework</groupId>
            <artifactId>spring</artifactId>
            <version>2.0.5</version>
            <type>jar</type>
            <url>http://www.springframework.org/</url>
            <properties>
            	<war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>hibernate</artifactId>
            <version>3.2.4</version>
            <type>jar</type>
            <url>http://www.hibernate.org/</url>
            <properties>
            	<war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>hibernate-annotations</artifactId>
            <version>3.3.0</version>
            <type>jar</type>
            <url>http://www.hibernate.org/</url>
            <properties>
            	<war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>hibernate-commons-annotations</artifactId>
            <version>3.3.0</version>
            <type>jar</type>
            <url>http://www.hibernate.org/</url>
            <properties>
            	<war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>ejb3-persistence</artifactId>
            <version>3.3.0</version>
            <type>jar</type>
            <url>http://www.hibernate.org/</url>
            <properties>
            	<war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>maven</groupId>
            <artifactId>maven-eclipse-plugin</artifactId>
            <version>1.12</version>
            <type>plugin</type>
            <url>http://maven.apache.org/maven-1.x/plugins/eclipse/</url>
        </dependency>        
    </dependencies>
    <build>
        <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/src/test/java</unitTestSourceDirectory>
        <unitTest>
        	<resources>
        		<resource>
        			<directory>${basedir}/src/test/java</directory>
        			<includes>
        				<include>log4j.properties</include>
        				<include>**/*.xls</include>
        			</includes>
        		</resource>
        	</resources>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>
		<resources>
    		<resource>
    			<directory>${basedir}/src/main/java</directory>
    			<includes>
				<!--
    				<include>**/*.properties</include>
    				<include>ehcache.xml</include>
				-->
    			</includes>
    		</resource>
	    </resources>        
    </build>
</project>


